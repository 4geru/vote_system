
<%#materializeを使ってカード型にしてその下フォームをくっつける感じかな？%>
<% @products.each do |pro| %>
  <%= pro.title %>
  <%= image_path(pro.image) %>
  <%= form_for(@vote,:url => {:controller => :votes, :action => :create}) do |f| %>
    <%= f.hidden_field :contest_id, :value => params[:contest_id] %>
    <%= f.hidden_field :product_id, :value => params %>
    <%= f.hidden_field :user_id, :value => 2 %>
    <% f.label :reason%>
    <%= f.text_area :reason %>
    <%= f.submit("投票！") %>
  <% end %>
<% end %>
