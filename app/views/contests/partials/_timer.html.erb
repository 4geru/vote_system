<script>
<% t = @contest.end_time %>
end = new Date(<%= t.year %>, <%= t.month %> - 1, <%= t.day %>, <%= t.hour %>, <%= t.min %> )
increaseTime = function(){
  now = new Date()
  var calc = new Date(end-now);

  var flag = calc.getUTCFullYear() - 1970 <= 0 || calc.getUTCMonth() <= 0 || calc.getUTCDate() <= 0
  console.log(calc.getUTCFullYear() - 1970)
  if(calc.getUTCFullYear() - 1970 >= 0){
    $('div#title')[0].textContent = '投票終了まで'
    $('div#year')[0].textContent = (calc.getUTCFullYear() - 1970 <= 0 ? '' : calc.getUTCFullYear() - 1970 + '年')
    $('div#month')[0].textContent = (calc.getUTCMonth() > 0 ? calc.getUTCMonth() + 'ヶ月' : '')
    $('div#day')[0].textContent = (calc.getUTCDate() - 1 > 0 ? calc.getUTCDate() - 1 + '日' : '')
    $('div#hour')[0].textContent = calc.getUTCHours()
    $('div#min')[0].textContent = calc.getUTCMinutes()
    $('div#sec')[0].textContent = calc.getUTCSeconds()
  } else {
    location.reload()
  }

}
increaseTime()
setInterval(increaseTime, 1000);
</script>